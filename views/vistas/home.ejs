<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/menu') %>


    <main>
        
        <% if (title==="Home") { %>
            <h2 class="text-center mt-3"><%= title %></h2>
          <% } %>

        <% if (title==="Usuarios") { %>
            <h2 class="text-center mt-3"><%= title %></h2>
            <!-- <% console.log(usuarios) %> -->

            <%- include('../partials/busqueda') %>



            <div class="container">

                <table class="table table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">#id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Edad</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <%  for (let index = 0; index < usuarios.length; index++) { %>
                          <tr>
                            <th scope="row"><a href=<%= "/usuarios/"+ usuarios[index].id %> ><%= usuarios[index].id %></a></th> 
                            <td><%= usuarios[index].nombre %></td>
                            <td><a href=<%= "/usuarios/apellido/"+ usuarios[index].apellido %> ><%= usuarios[index].apellido %></a></td>
                            <td><%= usuarios[index].edad %></td>
                          </tr>
                          <% } %>
                    </tbody>
                </table>
            </div>               

        <% } %>
            
        <% if (title==="Usuario Id") { %>
            <h2 class="text-center mt-3"><%= title %></h2>
            <!-- <% console.log(usuarios) %> -->
                
            <%- include('../partials/busqueda') %>
 

            <div class="container">

                <table class="table table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">#id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Edad</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                          <tr>
                            <th scope="row"><%= usuarios.id %></th>
                            <td><%= usuarios.nombre %></td>
                            <td><%= usuarios.apellido %></td>
                            <td><%= usuarios.edad %></td>
                          </tr>
                    </tbody>
                </table>
            </div>

            <p><b> id: <%= usuarios.id %></b>, Nombre: <%= usuarios.nombre %>, Apellido:<%= usuarios.apellido %>, Edad: <%= usuarios.edad %> años.</p>     
    
        <% } %>

        <% if (title==="Usuario de Apellido") { %>
            <h2 class="text-center mt-3"><%= title %> <%= apellido %></h2>
            <!-- <% console.log(usuarios) %> -->

            <%- include('../partials/busqueda') %>

            <div class="container">

                <table class="table table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">#id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Edad</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <%  for (let index = 0; index < usuarios.length; index++) { %>
                          <tr>
                            <th scope="row"><%= usuarios[index].id %></th>
                            <td><%= usuarios[index].nombre %></td>
                            <td><%= usuarios[index].apellido %></td>
                            <td><%= usuarios[index].edad %></td>
                          </tr>
                          <% } %>
                    </tbody>
                </table>
            </div>   
        
        <% } %>


        <% if (title==="Usuario por Edad") { %>
            <h2 class="text-center mt-3"><%= title %> mayores de <%= edad %> años</h2>
            <!-- <% console.log(usuarios) %> -->

            <%- include('../partials/busqueda') %>


            <div class="container">

                <table class="table table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">#id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Edad</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <%  for (let index = 0; index < usuarios.length; index++) { %>
                          <tr>
                            <th scope="row"><%= usuarios[index].id %></th>
                            <td><%= usuarios[index].nombre %></td>
                            <td><%= usuarios[index].apellido %></td>
                            <td><%= usuarios[index].edad %></td>
                          </tr>
                          <% } %>
                    </tbody>
                </table>
            </div>   
        
        <% } %>


    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>